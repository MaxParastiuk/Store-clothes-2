<h1>CART</h1>
<div id="cart">
	{{#if clothes.length}}
		<table>
			<thead>
				<tr>
					<th>Name</th>
					<th>Count</th>
					<th>Act</th>
				</tr>
			</thead>

			{{#each clothes}}
				<tbody>
					<tr>
						<td>{{title}}</td>
						<td>{{count}}</td>
						<td>
							<button
								class="btn btn-small js-remove"
								data-id="{{_id}}"
								data-csrf="{{@root.csrf}}"
							>Delete</button>
						</td>
					</tr>
				</tbody>

			{{/each}}
		</table>

		<p><strong>Price:</strong><span class="price">{{price}}</span></p>

		<form action="/orders" method="POST">
			<input type="hidden" name="_csrf" value="{{csrf}}" />
			<button type="submit" class="btn">Order</button>
		</form>
	{{else}}
		<p>Cart empty</p>
	{{/if}}
</div>