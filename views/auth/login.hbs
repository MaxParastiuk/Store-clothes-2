<div class="auth">

	<div class="row">
		<div class="col s12">
			<ul class="tabs">
				<li class="tab col s6"><a class="active" href="#login">login</a></li>
				<li class="tab col s6"><a href="#register">register</a></li>

			</ul>
		</div>
		<div id="login" class="col s6 offset-s3">
			{{#if loginError}}
				<p class="alert">{{loginError}}</p>
			{{/if}}

			<h1>Login in store</h1>
			<form action="/auth/login" method="POST">
				<div class="input-field">
					<input
						name="email"
						id="email"
						type="email"
						class="validate"
						required
					/>
					<label for="email">email</label>
					<span
						class="helper-text"
						data-error="enter email"
						data-success="right"
					></span>
				</div>
				<div class="input-field">
					<input
						name="password"
						id="password"
						type="password"
						class="validate"
						required
					/>
					<label for="password">Password</label>
					<span
						class="helper-text"
						data-error="enter password"
						data-success="right"
					></span>
				</div>

				<input type="hidden" name="_csrf" value="{{csrf}}" />

				<p><a href="/auth/reset">Forget password</a></p>
				<button class="btn btn-primary" type="submit">Login</button>
			</form>
		</div>
		<div id="register" class="col s6 offset-s3"><h1>Register in store</h1>
			{{#if registerError}}
				<p class="alert">{{registerError}}</p>
			{{/if}}
			<form action="/auth/register" method="POST" novalidate>
				<div class="input-field">
					<input
						name="email"
						id="remail"
						type="email"
						class="validate"
						required
					/>
					<label for="remail">email</label>
					<span
						class="helper-text"
						data-error="enter email"
						data-success="right"
					></span>
				</div>
				<div class="input-field">
					<input
						name="password"
						id="rpassword"
						type="password"
						class="validate"
						required
					/>
					<label for="rpassword">Password</label>
					<span
						class="helper-text"
						data-error="enter password"
						data-success="right"
					></span>
				</div>

				<div class="input-field">
					<input
						name="confirm"
						id="confirm"
						type="password"
						class="validate"
						required
					/>
					<label for="confirm">Password confirm</label>
					<span
						class="helper-text"
						data-error="enter password"
						data-success="right"
					></span>
				</div>

				<div class="input-field">
					<input name="name" id="name" type="text" class="validate" required />
					<label for="confirm">Name</label>
					<span
						class="helper-text"
						data-error="enter name"
						data-success="right"
					></span>
				</div>
				<input type="hidden" name="_csrf" value="{{csrf}}" />
				<button class="btn btn-primary" type="submit">Register</button>
			</form></div>

	</div>
</div>