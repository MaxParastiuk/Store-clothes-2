<h1>Add page</h1>
{{#if error}}
	<p class="alert">{{error}}</p>
{{/if}}
<form action="/add" method="POST" novalidate>
	<div class="input-field">
		<input
			name="title"
			id="title"
			type="text"
			class="validate"
			value="{{data.title}}"
			required
		/>
		<label for="title">Name item</label>
		<span
			class="helper-text"
			data-error="enter name"
			data-success="right"
		>Helper text</span>
	</div>
	<div class="input-field">
		<input
			name="price"
			id="price"
			type="text"
			class="validate"
			value="{{data.price}}"
			required
			min="1"
		/>
		<label for="price">Price</label>
		<span
			class="helper-text"
			data-error="enter price"
			data-success="right"
		>Helper text</span>
	</div>
	<div class="input-field">
		<input
			name="img"
			id="img"
			type="text"
			class="validate"
			value="{{data.img}}"
			required
		/>
		<label for="img">URL img</label>
		<span class="helper-text" data-error="enter url" data-success="right">Helper
			text</span>
	</div>
	<input type="hidden" name="_csrf" value="{{csrf}}" />
	<button class="btn btn-primary" type="submit">Add item</button>
</form>